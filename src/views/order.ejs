<%
/* global reqParams */
  var orderPrice;
%>
<form action="/booking?searchId=<%= reqParams.searchId %>" method="post" id="form_booking" class="booking">

  <!-- hacky enforce conventions on the unconventional nav structure
       Deborah will fix later -->
       <style>
        .navbar-toggle {
          display: none;
        }
        .navbar-brand {
          padding-top: 0;
          padding-left: 0;
        }
       </style>
  <!-- ----------------------- -->   
  

  
  <!-- ------------- REACT FLIGHT UNIT ------------ -->
  <!-- -------------------------------------------- -->
  
  <!-- script for the React flight unit -->
  
  <script>
  var ItineraryData = <%- JSON.stringify(order[0]) %>;
  var InitResultData = {iconSpriteMap: []};
  </script>
  
  <div class="flight-unit">
  
    <!-- here is the div that the React unit replaces  -->
    <div id="booking-flight-unit" class="booking-flight-unit"></div>
  
  </div>
  
  <!-- -------------------------------------------- -->
  <!-- --------- ENDS REACT FLIGHT UNIT ----------- -->
  
  
  <% iterator = 0; %>
    <% if (order.length) { %>
    <% order.forEach(function (sRes, i) {
      sRes.price = parseFloat(sRes.price).toFixed(2);
      orderPrice = (sRes.currency == 'USD') ? "$"+sRes.price : sRes.price +' '+ sRes.currency;
    %>
       
    <% }); %>
  <% } %>
  
  <div id="user-time-limit-target-div" class="time-limit message hidden">
    <div class="copy">Time limit for getting the fare is <span id="user-time-limit-target"></span> day(s).</div>
  </div>

    <div class="form">
    <div class="page-ti">Billing</div>

      <input type="hidden" name="id" value="<%= reqParams.id %>">
      
        <label class="required">First Name</label>
        <input type="text" name="FirstName" class="form-control input-sm" placeholder="First Name" value="<%= reqParams.FirstName ? reqParams.FirstName : '' %>">

        <label class="required">Last Name</label>
        <input type="text" name="LastName" class="form-control input-sm" placeholder="Last Name"  value="<%= reqParams.LastName ? reqParams.LastName : '' %>">

        <label class="required">Gender</label>
        <%- _res = widgets.dropDownList(reqParams, "Gender", Profile.attr_gender, {"class": "form-control input-sm"}) %>

        <label class="required">Birthday</label>
        <input type="date" name="DateOfBirth" class="form-control input-sm" placeholder="YYYY-MM-DD" maxlength="10" value="<%= reqParams.DateOfBirth ? reqParams.DateOfBirth : '' %>">

        <label>Passenger Type</label>
        <%- _res = widgets.dropDownList(reqParams, "PaxType", Profile.attr_pax_type, {"class": "form-control input-sm"}) %>

        <label class="required">Address</label>
        <input type="text" name="Address1" class="form-control input-sm" value="<%= reqParams.Address1 ? reqParams.Address1 : '' %>">

        <label class="required">City</label>
        <input type="text" name="City" class="form-control input-sm" value="<%= reqParams.City ? reqParams.City : '' %>">

        <label class="required">State</label>
        <input type="text" name="State" class="form-control input-sm" value="<%= reqParams.State ? reqParams.State : '' %>">

        <label class="required">Zip Code</label>
        <input type="text" name="ZipCode" class="form-control input-sm" value="<%= reqParams.ZipCode ? reqParams.ZipCode : '' %>">

        <label class="required">Country</label>
        <input type="text" name="Country" class="form-control input-sm" value="<%= reqParams.Country ? reqParams.Country : '' %>">

        <label class="required">Card Type</label>
        <%- _res = widgets.dropDownList(reqParams, "CardType", {
            'VI' : 'VISA',
            'CA' : 'Master Card',
            'AX' : 'American Express',
            'DS' : 'Discover'
          },
          {"class": "form-control input-sm"}) %>

        <label class="required">Card Number</label>
        <input type="number" name="CardNumber" class="form-control input-sm" value="<%= reqParams.CardNumber ? reqParams.CardNumber : '' %>">

        <label class="required">Expiration Date</label>
        <input type="text" name="ExpiryDate" class="form-control input-sm" maxlength="7" placeholder="MM/YYYY" value="<%= reqParams.ExpiryDate ? reqParams.ExpiryDate : '' %>">

        <label class="required">CVV</label>
        <input type="text" name="CVV" class="form-control input-sm" value="<%= reqParams.CVV ? reqParams.CVV : '' %>">

    </div>

    <div class="buttons">
      <button id="booking_button" class="big-button">
          <% if (!reqParams.special) { %>
              Book for 
              <%= orderPrice %>
          <%} else {%>
              Submit
          <% } %>
      </button>
    </div>

</form>

<% if (reqParams.special) { %>

<div class="modal continuous-search" id="user-price-modal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="title-bar">
        <div class="close-x" onclick="window.history.back();return false;"></div>
        <div class="title">Choose Your Price</div>
      </div>
        
      <form role="form" id="form_user_price">
      
        <div class="modal-body">
          <div class="sub-title">Continuous search for better price.</div>
          
            <div class="form-group">
              <label class="required" for="user_price">Price you commit for this itinerary:</label>
              <input type="text" class="form-control input-sm" id="user_price" name="user_price" placeholder="Enter your price">
            </div>
            <div class="form-group">
              <label class="required" for="user_timelimit">Time limit for getting the fare:</label>
              <input type="text" class="form-control input-sm" id="user_timelimit" name="user_timelimit" placeholder="Enter days">
            </div>
          
        </div>
        
        <div class="buttons-bar double">
          <button type="button" class="big-button secondary" onclick="window.history.back();return false;">Cancel</button>
          <button type="submit" class="big-button" id="user-price-submit">Submit</button>
        </div>
      
      </form>
      
    </div>
  </div>
</div>
<% } %>

  <!-- Modal -->
  <div id="bookingModal" class="modal fade bookingModal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-body">
          <div class="copy">
            Booking your trip!  
          </div>
          <div class="spinner-holder">
            <div class="icon-spinner"></div>
          </div>
        </div>
      </div>

    </div>
  </div>
